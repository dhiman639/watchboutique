{{ 'section-homepage-collections-wrapper.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="homepage-collections color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}>
    
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link {% if section.settings.title_center %} title-align-center {% endif %} title-wrapper--self-padded-mobile title-wrapper--no-top-margin homepage-collections__title">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.button_label != blank and show_mobile_slider -%}
          <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">
            {{- section.settings.button_label | escape -}}
          </a>
        {%- endif -%}
      </div>
    {%- endunless -%}

    <div class="homepage-collections-wrapper homepage-collections-wrapper--desktop-{{ section.settings.columns_desktop }} homepage-collections-wrapper--mobile-{{ section.settings.columns_mobile }}"
      style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
      
      {% for block in section.blocks %}
        <a href="{{ block.settings.collection_url }}" 
          class="homepage-collections-item homepage-collections-item--image-{{ section.settings.image_style }}">
          
          {%- if block.settings.background_image != blank -%}
            <div class="homepage-collections-item__image-container">
              <img class="homepage-collections-item__background-image" 
                src="{{ block.settings.background_image | img_url: 'master' }}" 
                alt="{{ block.settings.background_image.alt | escape }}"
                loading="lazy">
            </div>
          {%- endif -%}
          
          <div class="homepage-collections-item__content">
            {%- if block.settings.heading_image != blank -%}
              <img class="homepage-collections-item__heading-image" 
                src="{{ block.settings.heading_image | img_url: 'medium' }}" 
                alt="{{ block.settings.heading_image.alt | escape }}"
                loading="lazy">
            {%- else -%}
              <h3 class="homepage-collections-item__heading-text">
                {{ block.settings.heading }}
              </h3>
            {%- endif -%}
          </div>
          
          {%- if block.settings.overlay_image != blank -%}
            <img class="homepage-collections-item__overlay-image" 
              src="{{ block.settings.overlay_image | img_url: 'medium' }}" 
              alt="{{ block.settings.overlay_image.alt | escape }}"
              loading="lazy">
          {%- endif -%}
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Homepage Collections",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Featured Collections",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {"value": "h2", "label": "Small"},
        {"value": "h1", "label": "Medium"},
        {"value": "h0", "label": "Large"},
        {"value": "hxl", "label": "Extra Large"},
        {"value": "hxxl", "label": "Extra Extra Large"}
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "checkbox",
      "id": "title_center",
      "default": false,
      "label": "Center heading"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },
    {
      "type": "select",
      "id": "image_style",
      "label": "Image style",
      "options": [
        {"value": "original", "label": "Original"},
        {"value": "portrait", "label": "Portrait"},
        {"value": "square", "label": "Square"},
        {"value": "landscape", "label": "Landscape"}
      ],
      "default": "original"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Number of columns on mobile",
      "options": [
        {"value": "1", "label": "1 column"},
        {"value": "2", "label": "2 columns"}
      ],
      "default": "1"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "url",
          "id": "collection_url",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "info": "Shown if heading image is not set"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background image"
        },
        {
          "type": "image_picker",
          "id": "heading_image",
          "label": "Heading image"
        },
        {
          "type": "image_picker",
          "id": "overlay_image",
          "label": "Overlay image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Homepage Collections",
      "blocks": [
        {"type": "collection"},
        {"type": "collection"},
        {"type": "collection"}
      ]
    }
  ]
}
{% endschema %}